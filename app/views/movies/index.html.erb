<h1>All of the Movies</h1>

<a href="http://localhost:3000/movies/new_form"> Add a new movie</a>

<table>
  <tr>
    <th>
      Image
    </th>
    <th>
      Title
    </th>
    <th>
      Year
    </th>
    <th>
      Duration
    </th>
    <th>
      Description
    </th>
    <th>
      Director ID
    </th>
    <th>
      Actions
    </th>
  </tr>


  <% @movies.each do  |movie| %>

  <tr>
    <td>
      <img src = "<%= movie.image_url%>" width = "80">
    </td>

    <td>
      <%= movie.title%>
    </td>

    <td>
      <%= movie.year%>
    </td>

    <td>
      <%= movie.duration%>
    </td>

    <td>
      <%= movie.description%>
    </td>

    <!-- need to add the director id somehow -->
    <td>
      movie.director_id
    </td>


    <td>
      <a href="http://localhost:3000/movies/<%= movie.id %>">View</a>
      <a href="http://localhost:3000/movies/<%= movie.id %>/edit_form">Update</a>
      <a href="http://localhost:3000/movies/<%= movie.id %>/delete">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
